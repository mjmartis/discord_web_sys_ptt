{
  "name": "Discord System-Wide PTT",
  "version": "1.0",
  "description": "Push-to-talk from anywhere with the Discord web client.",
  "manifest_version": 3,
  "icons": {
    "16": "brw_ptt_16.png",
    "32": "brw_ptt_32.png",
    "48": "brw_ptt_48.png",
    "128": "brw_ptt_128.png"
  },
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["scripting"],
  "commands": {
    "dswptt_cmd": {
      "suggested_key": {
        "default": "Ctrl+Space"
      },
      "description": "Toggle PTT in the Discord web client"
    }
  },
  "action": {}
}
